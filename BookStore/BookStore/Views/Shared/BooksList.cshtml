@{
}
@model Book

<div class="card m-1 p-1">
    <p class="fw-bold bg-light text-black" style="font-size:large">Title: @Model.Title</p>
    <p>Author: @Model.Author</p>
    <p>Publisher: @Model.Publisher</p>
    <p>Isbn: @Model.Isbn</p>
    <p>Classification: @Model.Classification</p>
    <p>Category: @Model.Category</p>
    <p>PageCount: @Model.PageCount</p>
    <p>Price: @Model.Price</p>

    <form>
        <input type="hidden" asp-for="@Model.BookId" />
        <span class="card-text">
            
            <button type="submit" class="btn-info float-end">Add to Cart</button>
        </span>
    </form>
</div>